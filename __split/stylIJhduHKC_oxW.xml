<xsl:stylesheet version="1.0"
                exclude-result-prefixes="wp php fn xsl"
                xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                xmlns:php="http://php.net/xsl"
                xmlns:wp="http://www.palominosys.com/wp"
                xmlns:fn="http://www.w3.org/2005/xpath-functions"
                >
  <xsl:template match="*" mode="page-template" priority="0.5">
    <html lang="en">
      <xsl:call-template name="bootstrap-theme-head"/>
      <body style="">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="page-header">
                <h1>
                  <xsl:value-of select="/web/settings/title"/>
                  <xsl:text> </xsl:text><small>(Bootstrap Theme)</small>
                </h1>
              </div>
              <div class="row">
                <div class="col-md-3">
                  <ul>
                    <xsl:apply-templates select="/web/pages/page" mode="navigation"/>
                  </ul>
                </div>
                <div class="col-md-8">
                  <xsl:call-template name="page-content"/>
                </div>
                <div class="col-md-1">
                </div>
              </div>
              <div class="row footer">
                <div class="col-md-12">
                  (c) All Copyrights by Palomino Inc.
                </div>
              </div>
            </div>
          </div>
        </div>
        <xsl:call-template name="include-extension-scripts"/>
      </body>
    </html>
  </xsl:template>

  <xsl:template match="*[@design='3-column']" mode="page-template" priority="0.5">
    <html lang="en">
      <xsl:call-template name="bootstrap-theme-head"/>
      <body style="">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="page-header">
                <h1>
                  <xsl:value-of select="/web/settings/title"/>
                  <small>Basic Bootstrap Theme</small>
                </h1>
              </div>
              <div class="row">
                <div class="col-md-3">
                  <ul>
                    <xsl:apply-templates select="/web/pages/page" mode="navigation"/>
                  </ul>
                </div>
                <div class="col-md-6">
                  <xsl:call-template name="page-content"/>
                </div>
                <div class="col-md-3">
                  <xsl:apply-templates 
                                       select="(./html[@show-in='sidebar-right']
                                               | /web//page[@name='common']/html[@show-in='sidebar-right'])"/>
                </div>
              </div>
              <div class="row footer">
                <div class="col-md-12">
                  (c) All Copyrights by Palomino Inc.
                </div>
              </div>
            </div>
          </div>
        </div>
        <xsl:call-template name="include-extension-scripts"/>
      </body>
    </html>
  </xsl:template>

  <xsl:template name="bootstrap-theme-head">
    <head>
      <meta charset="utf-8"/>
      <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
      <meta name="viewport" content="width=device-width, initial-scale=1"/>
      <title>WebPal Bootstrap 3 Theme</title>
      <link href="css/bootstrap.min.css" rel="stylesheet"/>
      <link href="css/style.css" rel="stylesheet"/>
      <xsl:call-template name="include-extension-styles"/>
    </head>
  </xsl:template>

</xsl:stylesheet>]]></stylesheet>
